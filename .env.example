# MLOps Platform Environment Configuration
# Copy this file to .env and update with your values

# Database Configuration
POSTGRES_PASSWORD=your_secure_postgres_password
POSTGRES_USER=mlops
POSTGRES_DB=mlops_platform

# MinIO Configuration (Object Storage)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=your_secure_minio_password

# Grafana Configuration
GRAFANA_ADMIN_PASSWORD=your_secure_grafana_password

# Security Configuration
API_SECRET_KEY=your_very_long_and_secure_api_secret_key_here
JWT_SECRET_KEY=your_jwt_secret_key_for_authentication

# Monitoring Configuration
PROMETHEUS_RETENTION_TIME=200h
ALERTMANAGER_WEBHOOK_URL=https://your-slack-webhook-url

# Network Configuration
MLOPS_PLATFORM_NETWORK=mlops-platform-network

# Service Health Check Configuration
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3

# Performance Configuration
REDIS_MAX_MEMORY=512mb
POSTGRES_MAX_CONNECTIONS=100
MINIO_STORAGE_CLASS=STANDARD

# SSL/TLS Configuration (for production)
SSL_CERT_PATH=/etc/ssl/certs/mlops-platform.crt
SSL_KEY_PATH=/etc/ssl/private/mlops-platform.key
SSL_ENABLED=false

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=mlops-platform-backups

# Development/Production Flags
ENVIRONMENT=development
DEBUG_MODE=true
LOG_LEVEL=INFO